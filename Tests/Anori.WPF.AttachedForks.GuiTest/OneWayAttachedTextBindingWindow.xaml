<Window
    x:Class="Anori.WPF.AttachedAncestorProperties.GuiTest.OneWayAttachedTextBindingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:guiTest="clr-namespace:Anori.WPF.AttachedAncestorProperties.GuiTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:singleSetter="clr-namespace:Anori.WPF.AttachedAncestorProperties.GuiTest.SingleSetter"
    Title="DynamicEndPointTextBindingWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance guiTest:SimpleAttachedTextBindingViewModel}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock>Entry Point</TextBlock>
        <TextBox x:Name="EntryPointTextBox" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel x:Name="StackPanel" singleSetter:AttachedAncestorPropertyTextA.Setter="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock>End Point</TextBlock>
            <TextBox x:Name="EndPointTextBoxA" Text="{singleSetter:AttachedTextAGetter}" />
        </StackPanel>
    </StackPanel>
</Window>