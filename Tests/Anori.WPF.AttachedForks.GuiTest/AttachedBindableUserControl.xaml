<UserControl
    x:Class="Anori.WPF.AttachedAncestorProperties.GuiTest.AttachedBindableUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attachedForks="clr-namespace:Anori.WPF.AttachedAncestorProperties;assembly=Anori.WPF.AttachedAncestorProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Label IsEnabled="{attachedForks:AttachedBindingBooleanGetter}">Binding Boolean Test Text:</Label>
        <Label IsEnabled="{attachedForks:AttachedBindingBooleanGetter}">Boolean Test Text:</Label>
        <TextBox
            x:Name="EndPoint"
            IsEnabled="{attachedForks:AttachedBindingBooleanGetter}"
            Text="{attachedForks:AttachedBindingStringGetter}" />
    </StackPanel>
</UserControl>