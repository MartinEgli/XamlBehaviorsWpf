<Window
    x:Class="AttachedPropertyTests.SimpleBindingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attachedForks="clr-namespace:Anori.WPF.AttachedForks;assembly=Anori.WPF.AttachedForks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AttachedPropertyTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimpleBindingWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <TextBox x:Name="TextBox" Text="{Binding Text, Mode=TwoWay}" />
        <StackPanel x:Name="StackPanel" attachedForks:AttachedForkObject.Setter="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TextBox x:Name="TextBox1" Text="{attachedForks:AttachedObjectGetter UpdateSourceTrigger=PropertyChanged}" />
            <TextBox x:Name="TextBox2" Text="{attachedForks:AttachedObjectGetter}" />
        </StackPanel>
    </StackPanel>
</Window>