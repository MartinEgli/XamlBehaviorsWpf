<UserControl x:Class="Anori.WPF.AttachedAncestorProperties.GuiTest.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:attachedForks="clr-namespace:Anori.WPF.AttachedAncestorProperties;assembly=Anori.WPF.AttachedAncestorProperties"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Anori.WPF.AttachedAncestorProperties.GuiTest"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:ItemViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Border BorderBrush="Black"
            BorderThickness="1">
        <StackPanel>
            <TextBlock>End Point</TextBlock>
            <TextBox x:Name="TextBox1"
                     Text="{attachedForks:AttachedBindingStringGetter UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Border>
</UserControl>