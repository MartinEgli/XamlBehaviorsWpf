<Window x:Class="Anori.WPF.Behaviors.Observables.GuiTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="http://schemas.anori.com/xaml/behaviors"
        xmlns:nameChecks="clr-namespace:Anori.WPF.NameChecks;assembly=Anori.WPF.NameChecks"
        xmlns:extensions="clr-namespace:Behaviors.Extensions;assembly=Anori.WPF.Behaviors.Extensions"
        xmlns:guiTests="clr-namespace:Anori.WPF.Behaviors.Observables.GuiTests"
        xmlns:extensions1="clr-namespace:Anori.WPF.Behaviors.Extensions;assembly=Anori.WPF.Behaviors.Extensions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Button">
            <Behaviors:Interaction.Triggers>
                <Behaviors:EventTrigger EventName="{nameChecks:NameOf Click, Button, ThrowRuntimeException=False}">
                    <extensions:ToggleEnabledTargetedTriggerAction TargetName="Button2" />
                </Behaviors:EventTrigger>
            </Behaviors:Interaction.Triggers>
        </Button>
        <Button x:Name="Button2">
            Button 2
        </Button>
        <Button Content="Button">
            <Button.Style>
                <Style>
                    <Setter Property="Behaviors:Interaction.StyleTriggers">
                        <Setter.Value>
                            <Behaviors:StyleTriggerCollection>
                                <Behaviors:EventTriggerCreator
                                    EventName="{nameChecks:NameOf Click, Button, ThrowRuntimeException=False}">
                                    <Behaviors:EventTriggerCreator.ActionCreators>
                                        <Behaviors:TriggerActionCreatorCollection>
                                            <extensions1:ToggleEnabledTargetedTriggerActionCreator
                                                TargetName="Button4" />
                                        </Behaviors:TriggerActionCreatorCollection>
                                    </Behaviors:EventTriggerCreator.ActionCreators>
                                </Behaviors:EventTriggerCreator>
                            </Behaviors:StyleTriggerCollection>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="Button4">
            Button 4
        </Button>
    </StackPanel>
</Window>