<Window
    x:Class="Anori.WPF.Behaviors.Observables.GuiTests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:guiTests="clr-namespace:Anori.WPF.Behaviors.Observables.GuiTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance guiTests:MainViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type guiTests:CommandItem}">
            <Button Command="{Binding Command}">
                <Button.Content>
                    <TextBlock Text="{Binding Name}" />
                </Button.Content>
            </Button>
        </DataTemplate>
    </Window.Resources>
    <ItemsControl ItemsSource="{Binding Items}" />
</Window>