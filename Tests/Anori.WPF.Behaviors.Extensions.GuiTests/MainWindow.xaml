<Window
    x:Class="Anori.WPF.Behaviors.Extensions.GuiTests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:guiTests="clr-namespace:Anori.WPF.Behaviors.Extensions.GuiTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance guiTests:MainViewModel}"
    mc:Ignorable="d">
    <StackPanel>
        <Button Command="{Binding OpenToggleEnabledCommand}">Toggle Enabled Targeted Trigger Action Window</Button>
        <Button Command="{Binding OpenTwoToggleEnabledCommand}">Two Toggle Enabled Targeted Trigger Action Window</Button>
        <Button Command="{Binding OpenStyleTriggerTestCommand}">StyleTriggerTest Window</Button>
        <Button Command="{Binding OpenInvokeCommandActionCreatorCommand}">InvokeCommandActionCreator Window</Button>

        <Button Command="{Binding RunGarbageCollectorCommand}">Run Garbage Collector</Button>
    </StackPanel>
</Window>