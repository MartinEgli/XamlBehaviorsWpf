<Window
    x:Class="Anori.WPF.Behaviors.Extensions.GuiTests.ToggleEnabledTargetedTriggerActionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.anori.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Anori.WPF.Behaviors.Extensions;assembly=Anori.WPF.Behaviors.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nameChecks="clr-namespace:Anori.WPF.NameChecks;assembly=Anori.WPF.NameChecks"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Button>
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="{nameChecks:NameOf Click, Button, ThrowRuntimeException=False}">
                    <extensions:ToggleEnabledTargetedTriggerAction TargetName="TargetButton1" />
                    <extensions:ToggleEnabledTargetedTriggerAction TargetName="TargetButton2" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <Button.Content>Toggle Enabled Button</Button.Content>
        </Button>

        <Button x:Name="TargetButton1">
            <Button.Content>Target Button 1</Button.Content>
            <b:Interaction.Triggers>
                <b:PropertyChangedTrigger Binding="{Binding IsEnabled, ElementName=TargetButton1}">
                    <extensions:SetTimeTargetedTriggerAction TargetName="TimeBox1" />
                </b:PropertyChangedTrigger>
            </b:Interaction.Triggers>
        </Button>
        <Label>TimeBox1</Label>
        <TextBox x:Name="TimeBox1" />

        <Button x:Name="TargetButton2">
            <Button.Content>Target Button 2</Button.Content>
            <b:Interaction.Triggers>
                <b:PropertyChangedTrigger Binding="{Binding IsEnabled, ElementName=TargetButton2}">
                    <extensions:SetTimeTargetedTriggerAction TargetName="TimeBox2" />
                </b:PropertyChangedTrigger>
            </b:Interaction.Triggers>
        </Button>
        <Label>TimeBox2</Label>
        <TextBox x:Name="TimeBox2" />
    </StackPanel>
</Window>